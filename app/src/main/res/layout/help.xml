<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".HelpActivity"
    android:background="@drawable/background_blue">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pomoc"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Witaj w aplikacji 'nazwa'. Jej celem jest zbieranie informacji na temat wartości odzywczych twoich zakupów. \nDaj sobie pomóc! "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skróty"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/question"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Właśnie się tu znajdujesz! Ten przycisk prowadzi cie do okienka pomocy" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/home"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Przycisk domku zaprowadzi cie na stronę główną aplikacji. Stąd możesz zadecydować jakiej funkcji będziesz używać. Możesz także zaznaczyć na ile dni robisz zakupy" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/barcode"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Przyciśnięcie czytnika kodów kreskowych przeniesie cię do okna zajmującego się tą czynnością(how cleaver). Pamiętaj by kod kreskowy skanować w odpowiedni sposób - liczby powinny być na samym dole" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ocr"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Podobnie do czytnika kodów ten przycisk przeniesie cię do okna z rozpoznawaniem tekstu" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/shopping_cart"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Naciskając na ten przycisk przeniesiesz się do swojego koszyka!" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/kcal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To okno jest bardzo ważne. W nim bowiem znajdziesz wartości odżywcze produktów które zamierzasz kupić./n Na bieżąco kontroluj stan sowich zakupów, po to chyba pobrałeś tą aplikację prawda?" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jeszcze jedno! Pamiętaj by pozwolić aplikacji na dostęp do aparatu - jest to najważniejsze do poprawnego działąnia aplikacji!"
                    android:layout_marginTop="20dp"/>
                <Button
                    android:id="@+id/helpToMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Przejdź do strony głównej"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>