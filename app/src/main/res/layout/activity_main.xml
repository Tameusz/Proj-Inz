<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@drawable/background_blue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/question" />

        <ImageButton
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/shopping_cart" />

        <ImageButton
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/kcal" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podaj na ile dni robisz zakupy"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonBarcodeReader"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Skorzystaj z czytnika kodÃ³w kreskowych"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonTextRecognizer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Skorzystaj z rozpoznawania tekstu"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>